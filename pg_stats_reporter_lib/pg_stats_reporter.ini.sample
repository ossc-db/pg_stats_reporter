;-------------------------------------
; pg_stats_reporter configuration file
;-------------------------------------

;-------------------------------------
; global setting section
;-------------------------------------

[global_setting]
install_directory = /var/www
log_page_size = 1000


;-------------------------------------
; repository DB setting section
;-------------------------------------

[sample]

;-------------------------------------
; database connection
;-------------------------------------

host = localhost
port = 5432
dbname = postgres
username = postgres
;password =

;-------------------------------------
; report setting
;-------------------------------------

; --- Language Setting ---
language = auto

; --- Report Overview ---
overview = true

; -- Alerts --
alert = true

; --- Statistics ---

; -- Databases Statistics --
database_statistics = true
transaction_statistics = true
database_size = true
recovery_conflicts = true

; -- Instance Statistics --
wal_statistics = true
instance_processes_ratio = true
instance_processes = true

; --- OS Resources ---

; -- CPU and Memory --
cpu_usage = true
load_average = true
io_usage = true
memory_usage = true

; -- Disk Usage --
disk_usage_per_tablespace = true
disk_usage_per_table = true

; --- Activities ---

; -- Notable Tables --
heavily_updated_tables = true
heavily_accessed_tables = true
low_density_tables = true
fragmented_tables = true

; -- Query Activity --
functions = true
statements = true
plans = true

; -- Long Transactions --
long_transactions = true

; -- Lock Conflicts --
lock_conflicts = true

; --- Operation Activity ---

; -- Checkpoint Activity --
checkpoint_activity = true

; -- Autovacuums --
basic_statistics = true
io_statistics = true
analyze_statistics = true
modified_rows_ratio = true
vacuum_cancels = true

; -- Replication Activity --
current_replication_status = true
replication_delays = true

; --- Miscellaneous ---

; -- Tables and Indexes --
table = true
index = true

; -- Settings --
parameter = true

; -- Profiles --
profiles = false
